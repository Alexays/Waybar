# EditorConfig configuration for Waybar
# http://EditorConfig.org

# Top-most EditorConfig file
root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{build,css}]
indent_style = space
indent_size = 4

[*.{hpp,cpp}]
indent_style = space
indent_size = 2
